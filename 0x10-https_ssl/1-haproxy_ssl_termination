# Install certbot
sudo apt-get update
sudo apt-get install certbot

# Install HAProxy (ensure version 1.5 or higher)
sudo apt-get install haproxy
# Obtain a certificate using certbot
sudo certbot certonly --standalone -d www.yourdomain.com
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend www-https
    bind *:443 ssl crt /etc/letsencrypt/live/www.yourdomain.com/fullchain.pem
    reqadd X-Forwarded-Proto:\ https
    acl is_holberton hdr_end(host) -i www.yourdomain.com
    use_backend holberton_backend if is_holberton

backend holberton_backend
    server web-server 127.0.0.1:80
